[user]
name = <%= @user_name %>
email = <%= @user_email %>

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold

[color "status"]
added = green
changed = yellow
untracked = red

[gui]
fontdiff = -family \"Droid Sans Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0

[core]
excludesfile = <%= @user_homedir %>/.gitignore

[merge]
tool = meld

[push]
default = upstream

[alias]
a = add
c = commit
d = pull
l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
m = diff
s = status -su
u = push


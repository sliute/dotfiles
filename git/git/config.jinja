[user]
name = {{ pillar['user']['full_name'] }}
email = {{ pillar['user']['email'] }}

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow
frag = magenta
old = red
new = green

[color "status"]
added = green
changed = yellow
untracked = red

[core]
excludesfile = ~/.gitignore

[merge]
tool = meld

[push]
default = upstream

[alias]
graph = log --color --decorate=short --graph --oneline

[user]
name = <%= @user_name %>
email = <%= @user_email %>

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow
frag = magenta
old = red
new = green

[color "status"]
added = green
changed = yellow
untracked = red

[core]
excludesfile = <%= @user_homedir %>/.gitignore

[merge]
tool = meld

[push]
default = upstream

[alias]
graph = log --color --decorate=short --graph --oneline
